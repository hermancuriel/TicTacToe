<Window x:Class="TicTacToe.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="120" Width="300"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <Label Content="Username:"></Label>
                <TextBox Name="Username" MinWidth="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Password:"/>
                <PasswordBox Name="Password" Margin="3,0,0,0" MinWidth="220"/>
            </StackPanel>
        
        </StackPanel>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <Button Name="ButtonCancel" Content="Cancel" Margin="5,0,0,0" MaxHeight="20" MaxWidth="50" DockPanel.Dock="Right" Click="ButtonCancel_Click"/>
            <Button Name="ButtonOK" Content="Login" MaxHeight="20" MaxWidth="50" DockPanel.Dock="Right" Click="ButtonOK_Click" />
           
        </DockPanel>
    </DockPanel>
</Window>
